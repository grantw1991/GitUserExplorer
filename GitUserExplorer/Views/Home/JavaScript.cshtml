@{
    ViewBag.Title = "Git | JS";
}

<div class="row">
    <h2>JavaScript</h2>

    <form id="searchForm">

        <div class="input-group">
            <input type="text" class="form-control" id="searchText" placeholder="Type a github username here" name="inputSearch" required/>
            <span class="input-group-btn">
                <span class="btn btn-success btn-file" id="searchButton">
                    <i class="fa fa-search"></i>
                    Search... 
                </span>
            </span>
        </div>
        <label for="searchText" generated="true" class="error"></label>
        
    </form>

    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="thumbnail">
                <img src="https://help.github.com/assets/images/help/profile/identicon.png" class="img-thumbnail img-responsive">
                <div class="caption">
                    <h3 id="name">No User</h3>
                    <p id="location">...</p>
                    <p><a href="#" class="btn btn-primary" role="button" id="viewUserProfile" target="_blank">View</a> <a id="followers" href="#" class="btn btn-default" role="button">Followers</a>
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-5 col-md-7 col-lg-9">
            <table class="table table-striped" id="reposTable">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Star Gazers</th>
                        <th>Description</th>
                        <th>Language</th>
                        <th>Created</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/JavaScript/gitViewer-js.js"></script>
}
